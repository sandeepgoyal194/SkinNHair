<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_marginBottom="50dp"
        android:src="@drawable/app_dashboard_icon"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/btn_hair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_btn_drawable"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="5">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:clickable="false"
                android:scaleType="center"
                android:src="@drawable/hair_left"
                android:layout_weight="2"/>

            <Button

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:text="HAIR"
                android:textAllCaps="false"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="2"
                app:srcCompat="@drawable/hair_right"
                android:layout_gravity="center"
                android:clickable="false"
                android:scaleType="center"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_skin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/login_btn_drawable"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginRight="5dp"
                android:clickable="false"
                android:scaleType="fitXY"
                android:src="@drawable/skin" />

            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:text="SKIN"
                android:textAllCaps="false"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
